<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="@color/putih"
    android:orientation="vertical">

    <ImageView
        android:layout_width="335dp"
        android:layout_height="150dp"
        android:layout_marginVertical="50dp"
        android:layout_gravity="center"
        android:src="@drawable/register"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register"
        android:fontFamily="casual"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/username"
        android:fontFamily="casual"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/colom"
        android:drawableLeft="@drawable/guest"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:fontFamily="casual"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/colom"
        android:drawableLeft="@drawable/ic_lock"
        android:layout_marginVertical="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/confirmpassword"
        android:background="@drawable/colom"
        android:fontFamily="casual"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/c_password"
        android:hint="Confirm Password" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/kolombewarna"
        android:backgroundTint="@color/biruTua"
        android:hint="Register"
        android:id="@+id/register"
        android:fontFamily="casual"
        android:textColorHint="@color/putih"
        android:layout_marginVertical="10dp"/>
</LinearLayout>