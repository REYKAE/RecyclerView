<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/putih"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="335dp"
        android:layout_height="150dp"
        android:layout_marginVertical="50dp"
        android:layout_gravity="center"
        android:src="@drawable/undraw_login_v483" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="casual"
        android:text="Login"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:fontFamily="casual"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/colom"
        android:drawableLeft="@drawable/guest"
        android:hint="Username"/>
    
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="casual"
        android:background="@drawable/colom"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_lock"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHint="@color/putih"
        android:fontFamily="casual"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/biruTua"
        android:hint="Login"
        android:textSize="20dp"
        android:background="@drawable/kolombewarna"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textColor="@color/hitamluntur"
            android:text="Don't have an account?" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:text="  Register" />
    </LinearLayout>
</LinearLayout>